    <!-- 商城热卖 -->
    <view class='hot-sale'>
      <view class='title'>
        <text>灌灌灌灌灌</text>
        <view class='more-prod-cont'>
          <text class='more'>更多</text>
          <text class='arrow'></text>
        </view>
      </view>
      <view class='hotsale-item-cont'>
        <block>
          <view class='prod-items' bindtap='toProdPage'>
            <view class='hot-imagecont'>
              <image src='../../images/index-img/carousel-3.jpg' class='hotsaleimg'></image>
            </view>
            <view class='hot-text'>
              <view class='hotprod-text'>好货</view>
